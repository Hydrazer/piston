#!/usr/bin/env bash

# get the file into variable for later use
# octave --help
file="$1"

# remove the file from $@
shift

# get stdin as one string
stdin=`printf "%s\n" $@`

# # run octave code with --eval mode to run the matl code
echo "$stdin" | octave -W -p "$MATL_PATH" --eval "matl -of '$file'"